<div id="wrapper">
  <h1>Comment Section</h1>
  <button id="back-button" class="btn btn-light">Back to Articles</button>
  {{!-- <h2><i>If you can do this...the homework should be no problem.</i></h2> --}}
  {{!-- <div class="container"></div> --}}
  {{#each articles}}

  <div class="card bg-dark" style="color: whitesmoke; width: 80%">


    <h2>{{title}}</h2>
    <p>{{summary}}</p>
    {{!-- <a href={{link}}>Read More</a> --}}
    <a class="btn btn-outline-primary" href={{link}} style="width: 100px; margin-right: auto; ">Read More</a>
  </div>

  {{/each}}
  <br>

  {{#each comments}}

  <div class="card" style="background: lightgray; color: darkblue; padding: 10px; width: 80%">
    <h5>Comment By: {{username}}</h5>
    <p style="font-size: 20px">{{body}}</p>

    <button id="delete-comment" class="btn btn-outline-danger" value="{{_id}}"
      style="width: 150px; margin-left:auto">Delete Comment</button>
  </div>

  {{/each}}

  {{#each articles}}
  <div class="card bg-dark" style="color: whitesmoke; width: 80&">
    <div id="comment-input-box">
      <form action="/submit/{{_id}}" method="post">
        {{!-- <form id="comment-form"> --}}
        <input type="text" name="username" placeholder="Your Name">
        <textarea type="text" name="body" placeholder="Comment..."></textarea>

        <input type="submit">
      </form>
    </div>
  </div>
  {{/each}}

